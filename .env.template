# Environment
ENV_NAME=LOCAL

# Server Configuration
PORT=3016

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/mdr-video-transcriptions

# Transcription Provider: 'google' or 'openai' or 'mock'
TRANSCRIPTION_PROVIDER=google

# Use Mock Transcription (for testing without API charges)
# Set to 'true' to use mock data instead of real transcription APIs
# Perfect for UI development and testing without incurring costs
USE_MOCK_TRANSCRIPTION=false

# Google Cloud Configuration (for Speech-to-Text)
# Note: These credentials are for Google Cloud Speech-to-Text API, not OAuth
# Follow the guide in GOOGLE_SPEECH_API_SETUP.md to set these up
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# OpenAI Configuration (alternative to Google)
OPENAI_API_KEY=sk-your-openai-api-key-here

# File Storage Configuration
TEMP_AUDIO_DIR=./temp/audio
CLEANUP_TEMP_FILES=true

# Processing Configuration
MAX_VIDEO_LENGTH_SECONDS=7200
AUDIO_FORMAT=wav
AUDIO_CHANNELS=1
AUDIO_SAMPLE_RATE=16000

# Language Configuration
DEFAULT_LANGUAGE=en-US

# Authentication
USE_AUTH=true

# YouTube Configuration
# To fix "Sign in to confirm you're not a bot" errors:
# 1. Export cookies from your logged-in YouTube session
# 2. Save the cookies.txt file in the project root or specify path below
# 3. Use browser extensions like "Get cookies.txt LOCALLY" (Chrome/Firefox)
# 4. Make sure to login to YouTube first before exporting
YOUTUBE_COOKIES_FILE=./cookies.txt
# Optional: Add custom user agent to mimic real browser
YOUTUBE_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# App Dynamics (Optional)
ENABLE_APPDYNAMICS=false
APPDYNAMICS_CONTROLLER_HOST_NAME=<hostname>
APPDYNAMICS_CONTROLLER_PORT=443
APPDYNAMICS_CONTROLLER_SSL_ENABLED=true
APPDYNAMICS_ACCOUNT_NAME=<accountname>
APPDYNAMICS_ACCOUNT_ACCESS_KEY=<accesskey>
APPDYNAMICS_APPLICATION_NAME=<appname>
